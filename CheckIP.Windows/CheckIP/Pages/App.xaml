<Application
    x:Class="CheckIP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CheckIP"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    StartupUri="Main.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="/CheckIP;component/Localization/ResourceDictionary.xaml"/>
                <ResourceDictionary Source="/CheckIP;component/Localization/ResourceDictionary.de-DE.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
